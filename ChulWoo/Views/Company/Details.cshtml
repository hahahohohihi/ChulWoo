@model ChulWoo.Models.Company

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Texcode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Texcode)
        </dd>

    </dl>



    @if (Model.Projects.Count != 0)
    {
        <h3>Project</h3>

        <table class="table">
            <tr>
                <th>Project Name</th>
                <th>Date</th>
            </tr>

            @foreach (var item in Model.Projects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Date)
                    </td>
                </tr>
            }
        </table>
    }


    @if (Model.MaterialBuys.Count != 0)
    {
        <h3>Material Sell</h3>

        foreach (var item in Model.MaterialBuys)
        {
            <table class="table">
                <tr>
                    <td colspan="2" >
                        <dl class="dl-horizontal" style="height:0px;">
                            <dt>
                                Project Name
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => item.Project.Name)
                            </dd>
                        </dl>
                    </td>
                    <td colspan="2" >
                        <dl class="dl-horizontal" style="height:0px;">
                            <dt>
                                @Html.DisplayNameFor(model => item.Date)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => item.Date)
                            </dd>
                        </dl>
                    </td>
                </tr>
                <tr>
                    <th>Material Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Price</th>
                </tr>
                @foreach (var unit in item.MaterialBuyUnits)
                {
                    <tr>
                        <td>
                            @unit.MaterialUnitPrice.MaterialName.Name
                        </td>
                        <td>
                            @unit.Quantity
                        </td>
                        <td>
                            @Html.DisplayFor(model => unit.MaterialUnitPrice.Price)
                        </td>
                        <td>
                            @{
                                var price = unit.Quantity * unit.MaterialUnitPrice.Price;
                            }
                            @String.Format("{0:0,0}", price)
                        </td>
                    </tr>
                }
            </table>
            <br />
        }
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
