@model ChulWoo.Models.User

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>user ID</label>
        <input type="text" class="form-control" asp-for="UserID" placeholder="input user id" />
        <span class="text-danger" asp-validation-for="UserID"></span>
    </div>
    <div class="form-group">
        <label>user password</label>
        <input type="text" class="form-control" asp-for="UserPassword" placeholder="input password id" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
        <a class="btn btn-warning" href="#">cancel</a>
    </div>
</form>