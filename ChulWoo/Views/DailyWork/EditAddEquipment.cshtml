    <div class="form-horizontal">
        <h4>MaterialBuy</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DailyWork.ID)
        @Html.HiddenFor(model => model.DailyWork.Date)

        <dl class="dl-horizontal">
