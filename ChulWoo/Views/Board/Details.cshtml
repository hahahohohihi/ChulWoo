@model ChulWoo.Models.Board

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Board</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        @if (Convert.ToInt32(Context.Session["CurrentCulture"]) == 2)
        {
            <dt>
                @Html.DisplayNameFor(model => model.TitleKr)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TitleKr)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NoteKr)
            </dt>
            <dd>
                @Html.TextAreaFor(model => model.NoteKr, new { @class = "form-control", @Style = "height:150px; width:600px; max-width:600px;", @readonly = true })
            </dd>
        }
        else
        {
            <dt>
                @Html.DisplayNameFor(model => model.TitleVn)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TitleVn)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NoteVn)
            </dt>
            <dd>
                @Html.TextAreaFor(model => model.NoteVn, new { @class = "form-control", @Style = "height:150px; width:100%;", @readonly = true })
            </dd>
        }


    </dl>


    <ul class="attachment">
        @foreach (var item in Model.UploadFiles)
        {
            <li>
                <a class="title" href="/UploadFile/@item.FolderName/@item.SaveFileName">@item.FileName</a>  |
                <a class="title" href="/Board/Download/?SFilename=@(item.FolderName+"/"+ item.SaveFileName)&Filename=@item.FileName">Download</a>
            </li>
        }
    </ul>
    <br />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
